<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/teal_200"
        android:layout_centerInParent="true"
        android:text="button"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:id="@+id/centerBT"
        ></Button>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_above="@+id/centerBT"
        android:layout_alignStart="@id/centerBT"
        ></Button>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_toRightOf="@id/centerBT"
        android:layout_alignTop="@id/centerBT"
        ></Button>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_below="@id/centerBT"
        android:layout_alignEnd="@id/centerBT"
        ></Button>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_toLeftOf="@id/centerBT"
        android:layout_alignBottom="@id/centerBT"
        ></Button>
</RelativeLayout>
